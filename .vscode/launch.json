{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
            ],
            "django": true,
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false
        },
        {
            "name": "Django Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "api.tests"
            ],
            "django": true
        }
    ]
}
